<h1 class = "center-align">Manage Users</h1>



<table class = "centered responsive-table highlight">
   <thead>
     <tr>
         <th>Name</th>
         <th>Role</th>
         <th>Status</th>
         <th>Options</th>
     </tr>
   </thead>

   <tbody>
     <% @users.each do |user| %>
     <tr class = "user-<%= user.id %>">
       <td><%= user.name %></td>
       <td class = "role"><%= user.role %></td>
       <td>
         <%= link_to "Make Member", admin_user_path(user, role: "member"), method: "put", class: "waves-effect waves-light btn waves-input-wrapper"  unless user.member? %>
         <%= link_to "Make Admin", admin_user_path(user, role: "admin"), method: "put", class: "waves-effect waves-light btn waves-input-wrapper" unless user.admin? %>
         <%= link_to "Make Manager", admin_user_path(user, role: "manager"), method: "put", class: "waves-effect waves-light btn waves-input-wrapper" unless user.manager? %>
         <%= link_to "Deactivate", admin_user_path(user, status: "inactive"), method: "put", class: "waves-effect waves-light btn waves-input-wrapper btn-red" if user.active? %>
         <%= link_to "Reactivate", admin_user_path(user, status: "active"), method: "put", class: "waves-effect waves-light btn waves-input-wrapper btn-red" if user.active? %>
       </td>
     </tr>
     <% end %>


   </tbody>

 </table>
 <div class="center-align">
   <%= will_paginate @users %>
 </div>
